@model PROLab.NBS.Models.ViewModels.NBSSettingsViewModel
@{
    ViewData["Title"] = "ListCompanyTypes";
}

<h1>Company Roles</h1>
<div class="badge">
    <a class="btn btn-sm btn-success" asp-controller="CompanyTypes" asp-action="Create">Create new Type</a>
    <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="NBSSettings">Back to NBS Settings</a>


    <table class="table table-responsive-sm table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CompanyTypes[0].Id)</th>
                <th>@Html.DisplayNameFor(model => model.CompanyTypes[0].CompanyTypeName)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CompanyTypes.OrderBy(ct => ct.Id))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.CompanyTypeName)</td>
                    <td>
                        <a class="btn btn-sm btn-success" asp-controller="CompanyTypes" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-success" asp-controller="CompanyTypes" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-danger" asp-controller="CompanyTypes" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>